@model Attendance_Time_tracking_System.Models.Track

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Delete Track</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Poppins", sans-serif;
        }

        body {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .container {
            position: relative;
            max-width: 370px;
            width: 100%;
            padding: 25px;
            border-radius: 8px;
            background-color: #fff;
        }

            .container header {
                font-size: 22px;
                font-weight: 600;
                color: #333;
            }

            .container form {
                margin-top: 30px;
            }

        dl.row {
            margin-bottom: 20px;
        }

        dt.col-sm-2 {
            font-weight: bold;
        }

        dt.col-sm-2,
        dd.col-sm-10 {
            display: inline-block;
            width: 49%;
            vertical-align: top;
        }

        .button {
            margin-top: 20px;
        }

            .button input {
                color: #fff;
                font-size: 16px;
                font-weight: 400;
                background-color: #dc3545;
                cursor: pointer;
                transition: all 0.3s ease;
                border: none;
                padding: 10px 20px;
                border-radius: 5px;
                text-decoration: none;
            }

                .button input:hover {
                    background-color: #c82333;
                }
    </style>
</head>
<body>
    <div class="container">
        <header>Delete Track</header>
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Track</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Status)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Capacity)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Capacity)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.InstructorNavigation.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.InstructorNavigation.Email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProgramNavigation.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProgramNavigation.Name)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="button">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
                <div class="button">
                    <a href="@Url.Action("Index", "Tracks")" class="btn btn-primary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
