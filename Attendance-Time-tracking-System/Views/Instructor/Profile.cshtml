@model Instructor
@{
    Layout = "_StudentLayout";
}




<div class="container mt-4">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            @* <img src="/Images/instructor/@Model.UserImage" *@
                                 alt="Admin"
                                 class="rounded-circle"
                                 width="200" />
                            <div class="mt-3">
                                <h4>Name</h4>
                                <p class="text-secondary mb-1">Instructor</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Full Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">Name</div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <a href="/cdn-cgi/l/email-protection"
                                   class="_cf_email_"
                                   data-cfemail="bbddd2cbfbd1ced0d6ced395dad7">Email</a>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Age</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">Age</div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Mobile</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">PhoneNumber</div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Salary</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Salary
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-12">
                                <a class="btn btn-info" asp-action="Edit" asp-controller="instructor" asp-route-id="@Model.Id">Edit</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row gutters-sm">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div>Teaching Tracks :</div>
                        <div class="d-flex flex-column align-items-center text-center">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <td>Track ID</td>
                                        <td>Track Name</td>
                                        <td>Track Capacity</td>
                                    </tr>
                                </thead>
                                <tbody>
@*                                     @foreach (var item in Model)
                                    {
 *@                                        <tr>
                                            <td>Id</td>
                                            <td>Name</td>
                                            <td>Capacity</td>
                                        </tr>
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        @{
            var trackSupervised = ViewBag.TrackSupervised;
            @if (trackSupervised != null)
            {
                <div class="row gutters-sm py-3 my-3">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <span class="bg-primary  p-2 supervisedTrack">Supervised Track :</span>
                                <div class="row mt-2">
                                    <div class="col-sm-6">
                                        <h6 class="mb-0">department Id:</h6>
                                    </div>
                                    <div class="col-sm-6 text-secondary">@trackSupervised.Id</div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <h6 class="mb-0">Department Name :</h6>
                                    </div>
                                    <div class="col-sm-6 text-secondary">@trackSupervised.Name</div>
                                </div> <div class="row">
                                    <div class="col-sm-6">
                                        <h6 class="mb-0">Capacity :</h6>
                                    </div>
                                    <div class="col-sm-6 text-secondary">@trackSupervised.Capacity</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>