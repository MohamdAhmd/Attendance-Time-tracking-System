@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <script src="https://kit.fontawesome.com/b59801b295.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Poppins", sans-serif;
        }

        body {
            min-height: 100vh !important;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        table {
            width: 60vw;
            overflow-y: auto;
            padding: 5px;
            margin: 10px auto;
            text-align: center;
            background-color: rgb(255, 248, 248);
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            border-collapse: collapse;
            border-radius: 25px;
        }

        td {
            padding: 10px;
            border-top: 3px solid rgb(155, 155, 155);
        }

        th {
            padding: 10px;
        }

    </style>



</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <input type="text" id="searchInput" placeholder="Search by email...">
                <a href="/Instructor/Create" class="btn btn-primary">Create</a>
            </div>
        </div>
    </div>

    <table class="table table-hover" id="dataTable">
        <thead>
            <tr>
                <th>Instructor ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Password</th>
                <th>Salary</th>
                <th>Hire Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Password</td>
                    <td>@item.Salary</td>
                    <td>@item.HireDate</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <script>
        $(document).ready(function () {
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("table tbody tr").filter(function () {
                    $(this).toggle($(this).find("td:nth-child(3)").text().toLowerCase().indexOf(value) > -1)
                });
            });
            $('#dataTable').DataTable();
        });

    </script>
</body>
</html>
