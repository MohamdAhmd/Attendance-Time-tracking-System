@model IEnumerable<UserAbsence>



<table id="example" style="width:100%; ">
    <thead>
        <tr>
            <td>Date</td>
            <td>Status</td>

        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.day</td>
                    <td>@item.status</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2" class="text-center">No Status here</td>
            </tr>
        }
    </tbody>
</table>