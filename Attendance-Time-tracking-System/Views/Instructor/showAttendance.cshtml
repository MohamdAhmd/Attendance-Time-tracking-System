@model IEnumerable<UserAbsence>
@{
    ViewData["Title"] = "showAttendance";
    Layout = "Instructor";
}


@section Style {
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.3/css/dataTables.bootstrap5.css" />
    <style>
        div {
            font-size: 20px;
        }

        table {
            border-spacing: 1;
            border-collapse: collapse;
            background: #fff;
            border-radius: 10px;
            overflow: hidden;
            width: 100%;
            margin: 0 auto;
            position: relative;
        }

            table thead tr {
                height: 60px;
                background: #36304a;
                color: white;
            }

            table tr td {
                margin-left: 10px;
                padding: 10px;
            }

        #submitButton {
            background-color: #36304a;
            color: white;
        }

            #submitButton:hover {
                color: white;
            }
    </style>
}



<div class="container-fluid mt-5">
   
         <div class="row gy-2 gx-3 align-items-center" method="post">@* asp-controller="instructor" asp-action="showAttendance" method="post"*@ 

            <div class="col-2 offset-1">
                <label class="visually-hidden" for="autoSizingInput1">Status</label>
            <select class="form-control" name="SelectedStatus" id="statusSelect">
                    <option value="Absent" >Absent</option>
