<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" />
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
    @* <link rel="stylesheet" href="~/css/_style.css"> *@
    <link rel="stylesheet" href="~/css/security/security.css" />
    @RenderSection("Style", required: false)

</head>
<body>
    <nav class="sidebar close">
        <header>
            <div class="image-text">
                <span class="image">
                    <img src="~/Images/iti.png" alt="">
                </span>

                <div class="text logo-text">
                    <span class="name">ITI</span>
                    @if (User.IsInRole("Supervisor"))
                    {
                        <span class="profession">Supervisor</span>
                    }
                    else
                    {
                        <span class="profession">Instructor</span>
                      }
                    </div>
            </div>

            <i class='bx bx-chevron-right toggle'></i>
        </header>
 
        <div class="menu-bar">
            <div class="menu">
                <ul class="menu-links" style="padding-left:0px;">

                    <li class="nav-link" style="padding-left:0px;">
                        <a asp-action="ProfilePage" asp-controller="Instructor">
                            <i class='bx bx-bar-chart-alt-2 icon'></i>
                            <span class="text nav-text">Profile Page</span>
                        </a>
                    </li>

                    <li class="nav-link" style="padding-left:0px;">
                        <a asp-action="showAttendance" asp-controller="instructor">
                            <i class='bx bx-calendar icon'></i>
                            <span class="text nav-text">Attendance</span>
                        </a>
                    </li> 
                    
                    @if (User.IsInRole("Supervisor"))
                    {
                        <li class="nav-link" style="padding-left:0px;">
                            <a asp-action="SupervisorShowStudetnsDegrees" asp-controller="instructor">
                                <i class='bx bx-bell icon'></i>
                                <span class="text nav-text">Show Students</span>
                            </a>
                        </li>
                        <li class="nav-link" style="padding-left:0px;">
                            <a asp-action="index" asp-controller="TrackDays">
                                <i class='bx bxs-calendar icon'></i>
                                <span class="text nav-text">Schedule</span>
                            </a>
                        </li>

                        <li class="nav-link" style="padding-left:0px;">
                            <a asp-action="studentPermissions" asp-controller="Permission">
                                <i class='bx bx-message-alt-detail icon'></i>
                                <span class="text nav-text">Permissions</span>
                            </a>
                        </li>

                    }

                </ul> 
            </div>

            <div class="bottom-content">
                <li class="">
                    <a asp-action="logout" asp-controller="instructor">
                        <i class='bx bx-log-out icon'></i>
                        <span class="text nav-text">Logout</span>
                    </a>
                </li>

@*                 <li class="mode">
                    <div class="sun-moon">
                        <i class='bx bx-moon icon moon'></i>
                        <i class='bx bx-sun icon sun'></i>
                    </div>
                    <span class="mode-text text">Dark mode</span>

                    <div class="toggle-switch">
                        <span class="switch"></span>
                    </div>
                </li> *@

            </div>
        </div>

    </nav>

    <section class="home">
        <div class="text">
            @RenderBody()
    </section>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/js/security/security.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>

