@model Attendance_Time_tracking_System.Models.Program

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Program</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Poppins", sans-serif;
        }

        body {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .container {
            position: relative;
            max-width: 370px;
            width: 100%;
            padding: 25px;
            border-radius: 8px;
            background-color: #fff;
        }

            .container header {
                font-size: 22px;
                font-weight: 600;
                color: #333;
            }

            .container form {
                margin-top: 30px;
            }

        form .field, .select, textarea, option {
            margin-bottom: 20px;
        }

        form .input-field, .select, textarea, option {
            position: relative;
            height: 55px;
            width: 100%;
        }

        .input-field input, .select, textarea, option {
            height: 100%;
            width: 100%;
            outline: none;
            border: none;
            border-radius: 8px;
            padding: 0 15px;
            border: 1px solid #d1d1d1;
        }

        textarea {
            resize: none;
        }

        .invalid input {
            border-color: #d93025;
        }

        .field .error {
            display: flex;
            align-items: center;
            margin-top: 6px;
            color: #d93025;
            font-size: 13px;
            display: block;
        }

        .invalid .error {
            display: flex;
        }

        .error .error-icon {
            margin-right: 6px;
            font-size: 15px;
        }

        .button {
            margin: 25px 0 6px;
        }

            .button input {
                color: #fff;
                font-size: 16px;
                font-weight: 400;
                background-color: #4070f4;
                cursor: pointer;
                transition: all 0.3s ease;
            }

                .button input:hover {
                    background-color: #0e4bf1;
                }

        span {
            color: red;
        }
    </style>
</head>
<body>
    <div class="container">
        <header>Edit Program</header>
        <form asp-action="Edit" method="post" id="programForm">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="field">
                <label asp-for="Name"> Program Name <span>*</span></label>
                <div class="input-field">
                    <input asp-for="Name" class="form-control" id="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="field">
                <label asp-for="Description"> Program Description <span>*</span></label>
                <div class="input-field">
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="error"></div>
            <div class="input-field button">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <!-- JavaScript Validation -->
    <script>
        const form = document.getElementById("programForm");

        // Calling Function on Form Submit
        form.addEventListener("submit", (e) => {
            e.preventDefault(); // preventing form submitting
            var nameValue = document.getElementById('Name').value.trim();
            var descriptionValue = document.getElementById('Description').value.trim();
            var errorMsg = document.querySelector('.error');

            var regex = /^[a-zA-Z]/; // Matches strings that start with a letter
            var errorMessage = '';

            if (nameValue === '') {
                errorMsg.innerText = 'Program Name cannot be empty';
            } else if (nameValue.length < 5) {
                errorMsg.innerText = 'Program Name must have at least 5 characters';
            } else if (descriptionValue === '') {
                errorMsg.innerText = 'Program Description cannot be empty';
            } else {
                // Clear error message if validation passes
                errorMsg.innerText = '';
                form.submit(); // Submit the form if validation passes
            }
        });
    </script>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
