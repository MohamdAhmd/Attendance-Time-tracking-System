@model IEnumerable<StdPermissionVM>;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/boxicons@2.1.4/dist/boxicons.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <title>Document</title>a


<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Poppins", sans-serif;
    }

    body {
        min-height: 100vh !important;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    table {
        width: 60vw;
        overflow-y: auto;
        padding: 5px;
        margin: 10px auto;
        text-align: center;
        background-color: rgb(255, 248, 248);
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        border-collapse: collapse;
        border-radius: 25px;
    }

    td {
        padding: 10px;
        border-top: 3px solid rgb(155, 155, 155);
    }

    th {
        padding: 10px;
    }

    .add {
        width: 15vw;
        height: 6vh;
        border: none;
        border-radius: 25px;
        display: flex;
        padding: 10px 20px;
        cursor: pointer;
        background-color: rgba(43, 43, 247, 0.884);
        color: white;
    }

    .add a {
        text-decoration: none;
        color: white;
        display: flex;
    }

    </style>




</head>
<body>
    <div class="container">
        <table>
            <thead>
            <th> Student Id </th>
            <th> Full Name </th>
            <th> Date </th>
            <th> Permission </th>
            <th> Status </th>
            <th> Accept </th>
            <th> Reject </th>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                <tr>
                   <td>@item.PermissionInfo.StudentId</td>
                   <td>@item.Fname @item.Lname</td>
                   <td>@item.PermissionInfo.day</td>
                   <td>@item.PermissionInfo.PermissionBody</td>
                   <td>@item.PermissionInfo.PermissionStatus</td>
                   <td><input type="button" value="Accept" class="btn btn-success" ></td>
                   <td><input type="button" value="Reject" class="btn btn-danger" ></td>
                </tr>                    
                }
            </tbody>
    </div>
    </table>
    </div>
</body>
</html>