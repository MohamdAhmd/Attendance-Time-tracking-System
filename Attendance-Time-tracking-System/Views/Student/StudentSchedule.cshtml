@model IEnumerable<Attendance_Time_tracking_System.Models.TrackDays>

@{
    ViewData["Title"] = "ShowSchedule";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/boxicons@2.1.4/dist/boxicons.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <title>Schedule</title>


    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box; 
            font-family: "Poppins", sans-serif;
        }

        body {
            min-height: 100vh !important;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        table {
            width: 60vw;
            overflow-y: auto;
            padding: 5px;
            margin: 10px auto;
            text-align: center;
            background-color: rgb(255, 248, 248);
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            border-collapse: collapse;
            border-radius: 25px;
        }

        td {
            padding: 10px;
            border-top: 3px solid rgb(155, 155, 155);
        }

        th {
            padding: 10px;
        }

      
    </style>
</head>
<body>

    <div class="container">
                <h1>schedule</h1>
                <table>
                    <thead>
                        <tr>
                            <th>
                                Date
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Lecture1)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Lecture2)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Lecture3)
                            </th>
                            <th>
                                Track Name
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StartPeriod)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Lecture1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Lecture2)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Lecture3)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.TrackNavigation.Name)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
</body>
</html>

