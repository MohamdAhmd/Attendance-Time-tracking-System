@model IEnumerable<Employee>

@{


    ViewData["Title"] = "Admin | Index Employees";
    ViewData["EmployeeActive"] = "active";
    ViewData["InstructorsActive"] = "";
    ViewData["LogOutActive"] = "";

}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
    
        <a class="btn custom-btn mb-3" style="background-color:#2D9596" asp-action="create" asp-controller="Employee"><i class="fas fa-user-plus"></i> Create Employee</a>

        <table class="table table-bordered  table-hover table-responsive">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>FName</th>
                <th>LName</th>
                <th>Salary</th>
                <th>Email</th>
                <th>Password</th>
                <th>Password</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="4">NO DATA FOUND</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.F_name</td>
                        <td>@item.L_name</td>
                        <td>@item.Salary</td>
                        <td>@item.Email</td>
                        <td>@item.Password</td>
                            <td>@item.User_Status</td>

                        <td>    
                                <a class="btn btn-primary btn-action rounded-circle" asp-action="Update" asp-controller="Employee" asp-route-id="@item.Id"><i class="fas fa-edit"></i> </a>

                                <a onclick="return confirm('Are you sure you want to delete this employee?')" asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-duotone fa-trash"></i> </a>

                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
</body>
</html>


