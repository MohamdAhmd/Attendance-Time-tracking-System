@model Employee
@{
    List<RoleId> Roles = ViewBag.Role;

}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
<style>
    .container {
        max-width: 500px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .text-danger {
        color: #dc3545;
    }
</style>
<div class="container mt-5">

    <div class="form-group" hidden>
        <input asp-for="Id" class="form-controle" value="@Model?.Id" hidden />
    </div>

    <div class="form-group">
        <label for="F_name">First Name:</label>
        <input type="text" id="F_name" name="F_name" class="form-control" asp-for="F_name" value="@Model?.F_name" />
        <span asp-validation-for="F_name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="L_name">Last Name:</label>
        <input type="text" id="L_name" name="L_name" class="form-control" asp-for="L_name" value="@Model?.L_name" />
        <span asp-validation-for="L_name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Email">Email:</label>
        <input type="email" id="Email" name="Email" class="form-control" asp-for="Email" value="@Model?.Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Password">Password:</label>
        <input type="password" id="Password" name="Password" class="form-control" asp-for="Password" value="@Model?.Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ConfirmPassword">ConfirmPassword:</label>
        <input type="Password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" asp-for="ConfirmPassword" value="@Model?.ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Salary">Salary:</label>
        <input type="text" id="Salary" name="Salary" class="form-control" asp-for="Salary" value="@Model?.Salary" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="phone">Phone:</label>
        <input type="text" id="phone" name="phone" class="form-control" asp-for="phone" value="@Model?.phone" />
        <span asp-validation-for="phone" class="text-danger"></span>
    </div>

</div>

